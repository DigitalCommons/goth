#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), "..", "lib")
require 'rubygems'
require 'getoptlong'
require 'goth'
require 'erb'

options = GetoptLong.new(
  [ '--language', '-l', GetoptLong::REQUIRED_ARGUMENT ],
  [ '--template', '-t', GetoptLong::REQUIRED_ARGUMENT ],
  [ '--translations', '-T', GetoptLong::REQUIRED_ARGUMENT ],
)

template = "esstemplate.erb"
language = "en"
translations_file = nil

options.each do |opt, arg|
  case opt
  when '--language'
    language = arg
  when '--template'
    template = arg
  when '--translations'
    translations_file = arg
  end
end

raise "You must supply a template file" unless template
raise "No such template file" unless File.exist? template

raise "You must supply a translations file" unless translations_file
raise "No such translations file" unless File.exist? translations_file
 
schema = GOTH::Schema.create_from_file(ARGV, language, translations: translations_file)
generator = GOTH::Generator.new( schema, template )

file = generator.run()

puts file #output the result to terminal

