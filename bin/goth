#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), "..", "lib")
require 'rubygems'
require 'getoptlong'
require 'goth'
require 'erb'

PROGRAM     = File::basename $0

schema = GOTH::Schema.create_from_file(ARGV[0])
if ARGV[1]
  generator = GOTH::Generator.new( schema, ARGV[1] )
else
  generator = GOTH::Generator.new( schema )
end
file = generator.run()
puts file
